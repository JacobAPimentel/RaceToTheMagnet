        <item name="android:textColor">@color/white</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="HeaderNoRatio.Dark">
        <item name="android:background">@color/red_dark</item>
